{
  "name": "error-launcher",
  "version": "1.0.0",
  "author": "gim&jeycen",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "build:win": "electron-builder --win -c.directories.output=dist/windows",
    "build:mac": "electron-builder --mac -c.directories.output=dist/mac",
    "build:linux": "electron-builder --linux -c.directories.output=dist/linux"
  },
  "build": {
    "appId": "com.jeycen.launcher",
    "productName": "Spastic Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.5"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  }
}